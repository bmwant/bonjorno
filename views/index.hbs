<h1>hlus</h1>
<p>Available clients</p>

<table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
    <thead>
    <tr>
        <th class="mdl-data-table__cell--non-numeric">ID</th>
        <th>Location</th>
        <th>Health</th>
        <th>Last report</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        {{#each clients}}
            <td class="mdl-data-table__cell--non-numeric">{{this.id}}</td>
            <td>{{this.ip}}:{{this.port}}</td>
            <td>Good</td>
            <td>5 min ago</td>
        {{/each}}
    </tr>

    </tbody>
</table>

<!-- Floating Multiline Textfield -->
<form action="/exec" method="post">
    <div class="mdl-textfield mdl-js-textfield textfield-demo">
        <input class="mdl-textfield__input" type="text" id="sample1" name="host"/>
        <label class="mdl-textfield__label" for="sample1">Host</label>
    </div>
    <div class="mdl-textfield mdl-js-textfield textfield-demo">
        <input class="mdl-textfield__input" type="text" pattern="-?[0-9]*(\.[0-9]+)?" id="sample2" name="port"/>
        <label class="mdl-textfield__label" for="sample2">Port</label>
        <span class="mdl-textfield__error">Port value must be a number!</span>
    </div>
    <div class="mdl-textfield mdl-js-textfield textfield-demo">
        <textarea class="mdl-textfield__input" type="text" rows= "3" id="sample5" name="payload"></textarea>
        <label class="mdl-textfield__label" for="sample5">Payload</label>
    </div>
</form>
<!-- Raised button -->
<button class="mdl-button mdl-js-button mdl-button--raised">
    Start sending
</button>
